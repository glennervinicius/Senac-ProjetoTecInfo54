@model Chamados54WebApp.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}



   

<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        <a href="/">
            <img class="mx-auto h-10 w-auto" src="https://www.sp.senac.br/o/senac-theme/images/logo_senac_default.png" alt="Logo Senac Rio Preto">
        </a>
        
        <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Entre com sua conta de usuário</h2>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
        <form class="space-y-6" asp-action="Login">
            <div>
                <label asp-for="Email" class="block text-sm font-medium leading-6 text-gray-900">E-mail</label>
                <div class="mt-2">
                    <input asp-for="Email" type="email" autocomplete="email" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                </div>
            </div>

            <div>
                <div class="flex items-center justify-between">
                    <label asp-for="Senha" class="block text-sm font-medium leading-6 text-gray-900">Senha</label>
                    
                </div>
                <div class="mt-2">
                    <input asp-for="Senha" type="password" autocomplete="current-password" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                </div>
            </div>

            <div>
                <input type="submit" value="Entrar" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
            </div>
        </form>

        <p class="mt-10 text-center text-sm text-gray-500">
            Não possui um cadastro?
            <a asp-action="Cadastro" class="font-semibold leading-6 text-indigo-600 hover:text-indigo-500">Crie sua conta gratuitamente</a>
        </p>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
